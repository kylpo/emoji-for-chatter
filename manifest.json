{
    "name": "Emoji for Chatter",
    "description": "See and input emoji in Chatter!",
    "version": "0.1.5",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.salesforce.com/*"],
            "js": [
                "./bower_components/jquery/dist/jquery.min.js",
                "./bower_components/Caret.js/dist/jquery.caret.min.js",
                "./bower_components/jquery.atwho/dist/js/jquery.atwho.min.js",
                "./bower_components/emojify.js/emojify.js",
                "content.js"
            ],
            "css": [
                "./bower_components/jquery.atwho/dist/css/jquery.atwho.min.css",
                "style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "bower_components/emojify.js/images/emoji/*.png",
        "bower_components/jquery/dist/jquery.min.map"
    ],
    "manifest_version": 2
}
