{
    "name": "Emoji for Chatter",
    "description": "See and input emoji in Chatter",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": ["https://*.salesforce.com/*"],
            "js": ["./bower_components/emojify.js/emojify.js", "content.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "bower_components/emojify.js/images/emoji/*.png"
    ],
    "manifest_version": 2
}
